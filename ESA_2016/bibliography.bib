doi = {10.1111/j.2007.0030-1299.16173.x},
file = {:Users/nawis/Box Sync/Papers/Ulrich, Gotelli{\_}2007{\_}Disentangling community patterns of nestedness and species co-occurrence.pdf:pdf},
