doi = {10.1098/rspb.2013.2637},
file = {:Users/nawis/Box Sync/Papers/Tucker, Fukami{\_}2014{\_}Environmental variability counteracts priority effects to facilitate species coexistence evidence from nectar microb.pdf:pdf},
