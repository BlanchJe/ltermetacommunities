journal = {Ecology},
keywords = {16S rRNA genes,Hubbard Brook,New Hampshire,T-RFLP,USA,bacteria,microbial biogeography,microbial diversity,pH,stream benthic organic matter,terminal-restriction fragment length polymorphism},
