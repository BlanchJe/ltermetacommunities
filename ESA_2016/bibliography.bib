file = {:Users/nawis/Box Sync/Papers/Bohannan, Lenski{\_}1997{\_}Effect of resource enrichment on a chemostat community of bacteria and bacteriophage.pdf:pdf},
isbn = {0012-9658},
issn = {00129658},
journal = {Ecology},
keywords = {Bacteriophage T4,Escherichia coli,Population dynamics,Predation,Prey-dependent model,Ratio-dependent models,Resource enrichment},
