file = {:Users/nawis/Box Sync/Papers/Roughgarden{\_}2009{\_}Is there a general theory of community ecology.pdf:pdf},
isbn = {0169-3867},
issn = {01693867},
journal = {Biology and Philosophy},
keywords = {Community ecology,Conservation,Earth-systems science,Ecological health,General theory,Organic earth science,Philosophy of biology,Philosophy of ecology,Philosophy of science,Supply-side ecology,Theoretical ecology},
number = {4},
pages = {521--529},
title = {{Is there a general theory of community ecology?}},
volume = {24},
