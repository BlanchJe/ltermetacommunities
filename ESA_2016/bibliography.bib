doi = {10.1111/fwb.12502},
file = {:Users/nawis/Box Sync/Papers/Heino, Melo, Bini{\_}2015{\_}Reconceptualising the beta diversity-environmental heterogeneity relationship in running water systems.pdf:pdf},
isbn = {00465070},
issn = {13652427},
journal = {Freshwater Biology},
