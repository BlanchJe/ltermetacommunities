doi = {10.1111/1365-2656.12004},
file = {:Users/nawis/Box Sync/Papers/G{\"{o}}the, Angeler, Sandin{\_}2013{\_}Metacommunity structure in a small boreal stream network.pdf:pdf},
isbn = {1365-2656},
issn = {00218790},
journal = {Journal of Animal Ecology},
keywords = {Biodiversity,Community ecology,Dendritic networks,Headwater streams,Spatial and temporal scale},
number = {2},
pages = {449--458},
pmid = {23163593},
title = {{Metacommunity structure in a small boreal stream network}},
volume = {82},
year = {2013}
}
