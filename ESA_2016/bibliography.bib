journal = {The ISME journal},
keywords = {16S,16S: genetics,Bacteria,Bacteria: classification,Bacteria: genetics,Bacteria: isolation {\&} purification,Bacterial Physiological Phenomena,Biodiversity,Ecosystem,Phylogeny,RNA,Ribosomal,Soil Microbiology,Stochastic Processes,Water Microbiology},
