doi = {10.1111/fwb.12164},
file = {:Users/nawis/Box Sync/Papers/Heino, Schmera, Eros{\_}2013{\_}A macroecological perspective of trait patterns in stream communities.pdf:pdf},
isbn = {1365-2427},
