@article{Pringle2003,
abstract = {Hydrologic connectivity ( sensu Pringle, 2001) is used here in an$\backslash$necological context to refer to water-mediated transfer of matter,$\backslash$nenergy and/or organisms within or between elements of the hydrologic$\backslash$ncycle. Hydrologic connectivity is essential to the ecological integrity$\backslash$nof the landscape, and reduction or enhancement of this property by$\backslash$nhumans can have major negative environmental effects. Some of these$\backslash$neffects are immediate, localized and, therefore, obvious. For example,$\backslash$nwith respect to migratory fish, a given dam may act to reduce hydrologic$\backslash$nconnectivity (by preventing or impeding migration up or downstream),$\backslash$nwhereas interbasin river transfers enhance this property by allowing$\backslash$nthe dispersal of fish into river basins outside of their range. Less$\backslash$nobvious, are alterations in hydrologic connectivity that exhibit$\backslash$na time lag and manifest themselves at geographic locations far from$\backslash$nthe source of disturbance. An example concerns the cumulative effect$\backslash$nof dams on transport of the inorganic dissolved solute silica. Dams$\backslash$nand associated impoundments can reduce the transport of this compound,$\backslash$nwhich becomes deposited in the bottoms of reservoirs (Humborg et$\backslash$nal ., 2000). The cumulative effects of many dams along a river can$\backslash$npotentially result in a reduction in the amount of silica delivered$\backslash$nto coastal waters, with consequent negative effects on coastal food$\backslash$nweb structure that contribute to eutrophication (Justic et al .,$\backslash$n1995; Turner et al ., 1998). Management and policy decisions regarding$\backslash$nland-use activities and hydropower development are often made in$\backslash$nthe absence of adequate information on hydrologic connectivity in$\backslash$nthe landscape. Our current knowledge of how this property maintains$\backslash$nthe ecological integrity of 'natural' ecosystems is poor due to:$\backslash$n(1) the inherent complexity of water movement within and between$\backslash$nthe atmosphere and surface-subsurface systems; and (2) the extent$\backslash$nand magnitude of human alterations, which often occur before we understand$\backslash$nhow hydrologic connectivity affects ecological patterns in the landscape$\backslash$n(Pringle and Triska, 2000). Hydrologic connectivity is being altered$\backslash$nat a rate unprecedented in geologic history, contributing to dramatic$\backslash$nlosses in global aquatic biodiversity and associated ecosystem integrity$\backslash$n(e.g. Dudgeon, 2000; Pringle et al ., 2000; Rosenberg et al ., 2000).$\backslash$nHumans have already appropriated one-half of the accessible global$\backslash$nfreshwater runoff and this could climb to 70{\%} by 2025 (Postel et$\backslash$nal ., 1996).(...)},
author = {Pringle, Catherine},
doi = {10.1002/hyp.5145},
