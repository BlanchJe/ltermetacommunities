isbn = {0142-7873},
issn = {0142-7873},
journal = {Journal of Plankton Research},
number = {10},
pages = {1905--1924},
title = {{Increase in the proportion of metabolically active bacteria along gradients of enrichment in freshwater and marine plankton: implications for estimates of bacterial growth and production rates}},
