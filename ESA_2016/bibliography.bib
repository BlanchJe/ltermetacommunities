doi = {10.1111/j.1758-2229.2011.00257.x},
file = {:Users/nawis/Box Sync/Papers/Lindstr{\"{o}}m, Langenheder{\_}2012{\_}Local and regional factors influencing bacterial community assembly.pdf:pdf},
