file = {:Users/nawis/Box Sync/Papers/K{\"{a}}rn{\"{a}} et al.{\_}2015{\_}Inferring the effects of potential dispersal routes on the metacommunity structure of stream insects as the crow fli.pdf:pdf},
issn = {00218790},
journal = {Journal of Animal Ecology},
