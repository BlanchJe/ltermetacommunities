author = {Yamamichi, Masato and Yoshida, Takehito and Sasaki, Akira},
doi = {10.1086/661241},
file = {:Users/nawis/Box Sync/Papers/Yamamichi, Yoshida, Sasaki{\_}2011{\_}Comparing the effects of rapid evolution and phenotypic plasticity on predator-prey dynamics.pdf:pdf},
