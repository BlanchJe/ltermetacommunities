doi = {10.1111/j.1469-8137.2012.04234.x},
file = {:Users/nawis/Box Sync/Papers/Sistla, Schimel{\_}2012{\_}Stoichiometric flexibility as a regulator of carbon and nutrient cycling in terrestrial ecosystems under change.pdf:pdf},
