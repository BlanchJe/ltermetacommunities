file = {:Users/nawis/Box Sync/Papers/Kling et al.{\_}2000{\_}Integration of lakes and streams in a landscape perspective The importance of material processing on spatial patterns.pdf:pdf},
isbn = {0046-5070},
issn = {00465070},
journal = {Freshwater Biology},
keywords = {Lakes,Landscape ecology,Mass balance,Rivers,Spatial pattern,Synchrony},
