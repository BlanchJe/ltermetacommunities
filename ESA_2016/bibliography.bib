journal = {The American Naturalist},
keywords = {abstract,coexistence,competition,competition and dispersal should,dispersal-competition trade-off,dynamics,immigration,lead to regional coexistence,of,patch occupancy theory predicts,source-sink,spatial heterogeneity,that a trade-off between},
