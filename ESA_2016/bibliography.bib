journal = {Ecology},
keywords = {Bacteria,Biodiversity,Cultivation,Desiccation,Environmental filtering,Fungi,Neutral theory of biodiversity,Phylogeny,Respiration,Soil,Sorting,Traits-based ecology},
number = {8},
pages = {1867--1879},
pmid = {22928415},
title = {{Mapping the niche space of soil microorganisms using taxonomy and traits}},
