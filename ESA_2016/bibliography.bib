doi = {10.1029/WR017i005p01409},
file = {:Users/nawis/Box Sync/Papers/Sollins, McCorison{\_}1981{\_}Nitrogen and carbon solution chemistry of an old growth coniferous forest watershed before and after cutting.pdf:pdf},
isbn = {0043-1397},
