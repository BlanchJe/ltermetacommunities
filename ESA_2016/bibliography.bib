issn = {0012-9658},
journal = {Ecology},
keywords = {allochthony,browning,ecosystem stability,global change,microbial processes,nutrient,resilience,resistance,resource subsidy,tipping points,turnover},
number = {6},
pages = {1550--1560},
title = {{A test of the subsidy–stability hypothesis: the effects of terrestrial carbon in aquatic ecosystems}},
