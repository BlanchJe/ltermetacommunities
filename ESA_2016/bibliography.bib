doi = {10.1016/j.ecocom.2015.12.002},
file = {:Users/nawis/Box Sync/Papers/Tonkin et al.{\_}2016{\_}Elements of metacommunity structure of river and riparian assemblages communities, taxonomic groups and deconstructed.pdf:pdf},
