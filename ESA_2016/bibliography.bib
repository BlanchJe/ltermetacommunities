doi = {10.1371/journal.pone.0028132},
file = {:Users/nawis/Box Sync/Papers/Flores et al.{\_}2011{\_}Microbial biogeography of public restroom surfaces.PDF:PDF},
isbn = {1932-6203 (Electronic)$\backslash$r1932-6203 (Linking)},
issn = {19326203},
journal = {PLoS ONE},
