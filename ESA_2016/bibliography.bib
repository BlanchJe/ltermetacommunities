doi = {10.1128/mBio.01371-14},
file = {:Users/nawis/Box Sync/Papers/Shade et al.{\_}2014{\_}Conditionally rare taxa disproportionately contribute to temporal changes in microbial diversity.pdf:pdf},
isbn = {2150-7511 (Electronic)},
