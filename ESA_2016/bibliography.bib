issn = {14209101},
journal = {Journal of Evolutionary Biology},
keywords = {Adaptive radiation,Ecological speciation,G eospiza,Gal{\'{a}}pagos,Generalist,Ground finches,Niche partitioning,Resource use,Specialist,Sympatry},
number = {6},
pages = {1093--1104},
