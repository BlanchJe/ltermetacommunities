file = {:Users/nawis/Box Sync/Papers/Ellner{\_}2013{\_}Rapid evolution From genes to communities, and back again.pdf:pdf},
isbn = {1365-2435},
issn = {02698463},
journal = {Functional Ecology},
keywords = {Contemporary evolution,Eco-evolutionary dynamics,Evolutionary rescue,Fluctuating selection,Forecasting,Genetic constraints,Life-history trade-offs,Microcosms,Rapid evolution},
number = {5},
pages = {1087--1099},
title = {{Rapid evolution: From genes to communities, and back again?}},
