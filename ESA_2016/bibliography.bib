file = {:Users/nawis/Box Sync/Papers/Rice et al.{\_}2012{\_}Spatio-temporal patterns of tree establishment are indicative of biotic interactions during early invasion of a montane.pdf:pdf},
isbn = {1125801200219},
issn = {13850237},
journal = {Plant Ecology},
keywords = {Biotic interactions,Facilitation,Spatial point-pattern analysis,Tree invasion,Tree-tree interactions},
number = {4},
pages = {555--568},
title = {{Spatio-temporal patterns of tree establishment are indicative of biotic interactions during early invasion of a montane meadow}},
