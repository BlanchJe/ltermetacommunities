isbn = {2045-7758},
issn = {20457758},
journal = {Ecology and Evolution},
keywords = {Active dispersal,Aquatic macroinvertebrates,Community structure,Environmental filtering,Headwater streams,Moran's eigenvector maps,Partial redundancy analysis,Passive dispersal,Variation partitioning},
number = {13},
pages = {4473--4487},
pmid = {24340188},
